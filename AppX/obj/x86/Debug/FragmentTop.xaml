<UserControl
    x:Class="AppX.FragmentTop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Button x:ConnectionId='3' VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        x:Name="btnPane"
                    x:FieldModifier="public">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;"
                              FontSize="45"
                              Foreground="#fff"></FontIcon>
            </Button>
        </Grid>
        <Grid Grid.Column="1">
            <Image x:ConnectionId='2' Source="Assets/home.png"
                       Margin="10"
                       Name="iLogo"
                                            ></Image>
        </Grid>

        <Grid Grid.Column="2">
            <Border CornerRadius="8" 
                    BorderThickness="2" 
                    BorderBrush="#b8e0b8"
                    Margin="20"
                    >
                <TextBox x:ConnectionId='1' Name="tbSearch"
                         PlaceholderText="Tìm Kiếm Truyện..."
                         TextAlignment="Left"
                         Padding="8"
                         FontSize="20"
                                                   
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         BorderThickness="0"
                     ></TextBox>
            </Border>
        </Grid>

    </Grid>
</UserControl>

